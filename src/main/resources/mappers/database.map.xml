<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sethdev.cbpm.repository.DatabaseConnectionRepository">

    <resultMap id="DatabaseConnection" type="com.sethdev.cbpm.models.DatabaseConnection">
        <id column="id" property="id"/>
        <result column="type" property="type"/>
        <result column="name" property="name"/>
        <result column="host" property="host"/>
        <result column="port" property="port"/>
        <result column="schema" property="schema"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="create_date" property="createDate"
                typeHandler="org.apache.ibatis.type.LocalDateTimeTypeHandler"/>
        <result column="create_by" property="createBy"/>
        <result column="update_date" property="updateDate"
                typeHandler="org.apache.ibatis.type.LocalDateTimeTypeHandler"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <sql id="whereList">
        <where>
            <if test="params != null and params.name != null and params.name != ''">
                <bind name="likeName" value="'%' + params.name + '%'"/>
                LOWER(name) LIKE #{likeName}
            </if>
            <if test="params != null and params.type != null and params.type != ''">
                AND type = #{params.type}
            </if>
        </where>
    </sql>

    <insert id="insert" parameterType="com.sethdev.cbpm.models.DatabaseConnection">
        INSERT INTO database_connection
            (type,
            name,
            host,
            port,
            `schema`,
            username,
            password,
            create_by)
        VALUES
            (#{type},
            #{name},
            #{host},
            #{port},
            #{schema},
            #{username},
            #{password},
            #{createBy})
    </insert>

    <select id="get" parameterType="Integer" resultMap="DatabaseConnection">
        SELECT * FROM database_connection WHERE id = #{id}
    </select>

    <select id="list" parameterType="com.sethdev.cbpm.payload.request.PagingRequest" resultMap="DatabaseConnection">
        SELECT id, name, type FROM database_connection
        <include refid="whereList"/>
        ORDER BY id DESC
        LIMIT #{start}, #{limit}
    </select>

    <select id="listCount" parameterType="com.sethdev.cbpm.payload.request.PagingRequest" resultType="Integer">
        SELECT COUNT(0) FROM database_connection
        <include refid="whereList"/>
    </select>

    <select id="listAll" resultMap="DatabaseConnection">
        SELECT id, name, type FROM database_connection ORDER BY id DESC
    </select>

    <update id="update" parameterType="com.sethdev.cbpm.models.DatabaseConnection">
        UPDATE database_connection
        SET
            type = #{type},
            name = #{name},
            host = #{host},
            port = #{port},
            `schema` = #{schema},
            username = #{username},
            password = #{password},
            update_date = CURRENT_TIMESTAMP,
            update_by = #{updateBy}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="Integer">
        DELETE FROM database_connection WHERE id = #{id}
    </delete>

</mapper>